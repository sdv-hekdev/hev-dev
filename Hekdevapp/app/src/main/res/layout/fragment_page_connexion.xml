<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@color/indigo">


    <TextView
        android:id="@+id/connexiontitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/connexion_page_titre"
        style="@style/TitleTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connexion_page_mail"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/TitleTextStyle"/>

    <TextView
        android:id="@+id/mailinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connexion_page_mail_input"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@+id/mail"
        app:layout_constraintTop_toBottomOf="@+id/mail" />


    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"
        android:background="@color/purple_700"
        android:text="@string/connexion_page_submit"
        android:theme="@style/DefaultTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mailinput" />


    <TextView
        android:id="@+id/coguest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connexion_page_guest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:layout_marginTop="290dp"
        android:theme="@style/DefaultTextStyle"
        />


    <TextView
        android:id="@+id/cofb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connexion_page_fb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="170dp"
        android:layout_marginTop="330dp"
        />


    <TextView
        android:id="@+id/mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connexion_page_mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="400dp"
        android:theme="@style/DefaultTextStyle"
        />

    <TextView
        android:id="@+id/inscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connexion_page_inscrire"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="290dp"
        android:layout_marginTop="400dp"
        android:theme="@style/DefaultTextStyle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>